extends layout 

block content 
    a(href='/inventory/sections' class='return-btn') Back to Sections 
    h1= title 

    ul(id='section-products')
        each product in section_products 
            li(class='section-product-item')
                a(class='section-product-btn' href=product.url) #{product.name}
                | #{product.description}
        else
            li There are no products in this section.

        p 
            a(href=(section.url)+'/delete') Delete Section 
        p 
            a(href=(section.url)+'/update') Update Section